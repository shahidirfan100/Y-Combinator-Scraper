    "website": {
      "type": "string",
      "description": "Company website URL"
    },
    "algolia_raw": {
      "type": "object",
      "description": "Raw Algolia 'hit' record returned by the API. Stored for debugging and inspection."
    },
    "company_linkedin": {
      "type": "string",
      "description": "Company LinkedIn URL"
    },
    "company_x": {
      "type": "string",
      "description": "Company X (Twitter) URL"
    },
    "founders": {
      "type": "array",
      "description": "Array of founder objects with id, name, title, linkedin, x, bio"
    },
    "open_jobs": {
      "type": "array",
      "description": "Array of open job objects with id, title, description_url, description, location, salary, years_experience"
